{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./default.json",
  "compilerOptions": {
    "baseUrl": "../../../../src",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "paths": {
      "@config": ["config"],
      "@constants": ["constants"],

      "@api": ["api"],
      "@api/*": ["api/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@globalTypes": ["globalTypes"],
      "@globalTypes/*": ["globalTypes/*"],
      "@helpers": ["helpers"],
      "@helpers/*": ["helpers/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@intl": ["intl"],
      "@intl/*": ["intl/*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@style": ["style"],
      "@style/*": ["style/*"]
    }
  }
}
